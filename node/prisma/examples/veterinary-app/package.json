{
  "name": "veterinary-app",
  "version": "1.0.0",
  "private": true,
  "description": "Veterinary clinic example using Prisma with Aurora DSQL",
  "main": "dist/index.js",
  "scripts": {
    "prisma:generate": "npx prisma generate --schema=prisma/veterinary-schema.prisma",
    "prisma:migrate-up": "PRISMA_SCHEMA_DISABLE_ADVISORY_LOCK=1 npx prisma migrate deploy --schema=prisma/veterinary-schema.prisma",
    "prisma:migrate-down": "npx prisma db execute --file prisma/migrations/0_init/down.sql",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prebuild": "npm run prisma:generate",
    "build": "tsc",
    "presample": "npm run build",
    "sample": "tsx src/index.ts",
    "pretest": "npm run build",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "validate": "tsx ../../src/cli/index.ts validate",
    "dsql-transform": "tsx ../../src/cli/index.ts transform",
    "dsql-migrate": "tsx ../../src/cli/index.ts migrate"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^25.2.3",
    "prettier": "^3.8.1",
    "prisma": "^7.4.0",
    "ts-jest": "^29.4.1",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@aws-sdk/dsql-signer": "^3.990.0",
    "@aws/aurora-dsql-node-postgres-connector": "^0.1.8",
    "@prisma/adapter-pg": "^7.4.0",
    "@prisma/client": "^7.4.0",
    "@types/pg": "^8.15.6",
    "pg": "^8.18.0"
  },
  "overrides": {
    "lodash": "^4.17.23",
    "hono": "^4.11.7",
    "fast-xml-parser": "^5.3.4"
  },
  "comments": {
    "overrides": {
      "lodash": "CVE-2025-13465 - Remove when prisma updates to lodash >=4.17.23",
      "hono": "CVE-2026-24472 - Remove when prisma updates to hono >=4.11.7",
      "fast-xml-parser": "CVE-2026-25128 - Remove when @aws-sdk/xml-builder updates to fast-xml-parser >=5.3.4"
    }
  }
}
