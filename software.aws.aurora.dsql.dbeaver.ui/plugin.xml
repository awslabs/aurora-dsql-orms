                id="org.jkiss.dbeaver.ext.dsql.dataSourceWizardView"
                dataSource="aurora:dsql"
                targetID="org.jkiss.dbeaver.ext.ui.newConnectionWizard"
                label="%dsql.dialog.connection.header"
                class="software.aws.aurora.dsql.dbeaver.ui.views.DSQLConnectionPage"
                icon="platform:/plugin/software.aws.aurora.dsql.dbeaver.community-plugin/icons/dsql_icon.png">
        </view>
        <view
                id="org.jkiss.dbeaver.ext.dsql.dataSourceEditorView"
                dataSource="aurora:dsql"
                targetID="org.jkiss.dbeaver.ext.ui.editConnectionDialog"
                label="%dsql.dialog.connection.header"
                class="software.aws.aurora.dsql.dbeaver.ui.views.DSQLConnectionPage"
                icon="platform:/plugin/software.aws.aurora.dsql.dbeaver.community-plugin/icons/dsql_icon.png">
